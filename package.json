{
  "name": "pumpfun-buy-sell-bot",
  "version": "1.0.0",
  "description": "PumpFun trading functions for Solana",
  "main": "example.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node example.ts",
    "buy": "ts-node -e \"import('./example').then(m => m.executeBuy(require('@solana/web3.js').Keypair.generate(), process.argv[2], parseFloat(process.argv[3])))\"",
    "sell": "ts-node -e \"import('./example').then(m => m.executeSell(require('@solana/web3.js').Keypair.generate(), process.argv[2], BigInt(process.argv[3])))\""
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@coral-xyz/anchor": "^0.28.0",
    "@coral-xyz/borsh": "^0.29.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0"
  }
}
